@model NRDCL.Models.Order
@{
    ViewData["Title"] = "Order";
}
<div class="page_title">
    <span class="title">Order</span>
    <span class="subtitle">Delete Order</span>
</div>
<form asp-action="Delete" class="form-horizontal globalForm">
    <input type="hidden" asp-for="OrderID" />
    <fieldset>
        <legend>Are you sure you want to delete this?</legend>
        <div class="form-group">
            <div class="col-md-2">
                @Html.DisplayNameFor(model => model.CustomerID)
            </div>
            <div class="col-md-3">
                @Html.DisplayFor(model => model.CustomerID)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                @Html.DisplayNameFor(model => model.CustomerName)
            </div>
            <div class="col-md-3">
                @Html.DisplayFor(model => model.CustomerName)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                @Html.DisplayNameFor(model => model.SiteName)
            </div>
            <div class="col-md-3">
                @Html.DisplayFor(model => model.SiteName)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                @Html.DisplayNameFor(model => model.ProductName)
            </div>
            <div class="col-md-3">
                @Html.DisplayFor(model => model.ProductName)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                @Html.DisplayNameFor(model => model.Quantity)
            </div>
            <div class="col-md-3">
                @Html.DisplayFor(model => model.Quantity)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                @Html.DisplayNameFor(model => model.OrderAmount)
            </div>
            <div class="col-md-3">
                @Html.DisplayFor(model => model.OrderAmount)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
            <div class="col-md-2">
                <a asp-action="Create" class="btn btn-info" tabindex="8">Back to List</a>
            </div>
        </div>
    </fieldset>
</form>
