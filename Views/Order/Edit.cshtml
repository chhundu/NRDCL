@model NRDCL.Models.Order

@{
    ViewData["Title"] = "Order";
    <link rel="stylesheet" href="~/css/Edit.css" />
}
<h4 class="title">Edit Order</h4>
<hr />
<section class="container-fluid bg"></section>
<section class="row justify-content-center">
    <section class="col-6 col-sm-6 col-md-6 col-xl-6 formBg">
        <form asp-action="Edit" class="form-container">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderID" />
            <input type="hidden" asp-for="CustomerID" />
            <div class="form-group">
                <label asp-for="SiteID" class="control-label"></label>
                @Html.DropDownListFor(model => model.SiteID, new SelectList(Model.SiteList, "Value", "Text"), "--Select--", new { @class = "form-control", @id = "SiteID" })
                <span asp-validation-for="SiteID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductID" class="control-label"></label>
                @Html.DropDownListFor(model => model.ProductID, ViewData["ProductList"] as SelectList, "--Select--", new { @class = "form-control" })
                <span asp-validation-for="ProductID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="button" value="Calculate" class="btn btn-primary" id="Calculate" />
            </div>
            <div class="form-group">
                <label asp-for="OrderAmount" class="control-label"></label>
                <input asp-for="OrderAmount" class="form-control" />
                <span asp-validation-for="OrderAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-info">Back</a>
            </div>
        </form>
    </section>
</section>
