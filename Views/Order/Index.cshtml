@model IEnumerable<NRDCL.Models.Order>
@{
    ViewData["Title"] = "Order";
}
<div class="page_title">
    <span class="title">Order</span>
    <span class="subtitle">Order List</span>
</div>
<div class="col-lg-12 text-right">
    <a asp-controller="Order" asp-action="Create" class="btn btn-dark fa fa-plus">Make Order</a>
</div>
@{
    if (TempData["Text"] != null)
    {
        <div class="alert alert-success">
            <strong>@TempData["Text"].ToString()</strong>
        </div>
    }
}
@if (Model.Count() > 0)
{
    <fieldset class="v-no-padding">
        <legend>Order list</legend>
        <div class="form-group">
            <div class="col-md-12">
                <table class="table table-bordered table-striped editable-grid">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.CustomerName)</th>
                            <th>@Html.DisplayNameFor(model => model.SiteName)</th>
                            <th>@Html.DisplayNameFor(model => model.ProductName)</th>
                            <th>@Html.DisplayNameFor(model => model.Quantity)</th>
                            <th>@Html.DisplayNameFor(model => model.OrderAmount)</th>
                            <th>@Html.DisplayNameFor(model => model.Balance)</th>
                            <th width="20%">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => order.CustomerName)</td>
                                <td>@Html.DisplayFor(modelItem => order.SiteName)</td>
                                <td>@Html.DisplayFor(modelItem => order.ProductName)</td>
                                <td>@Html.DisplayFor(modelItem => order.Quantity)</td>
                                <td>@Html.DisplayFor(modelItem => order.OrderAmount)</td>
                                <td>@Html.DisplayFor(modelItem => order.Balance)</td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { orderId = order.OrderID }) |
                                    @Html.ActionLink("Details", "Details", new { orderId = order.OrderID }) |
                                    @Html.ActionLink("Delete", "Delete", new { orderId = order.OrderID })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        </fieldset>
        }
        else
        {
        <h3>No Order Exists!</h3>
        }