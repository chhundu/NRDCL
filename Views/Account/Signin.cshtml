@model NRDCL.Models.Acc.SigninUserModel

@{
    ViewData["Title"] = "Signin";
}

<h1>Sign In</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input asp-for="Rememberme" type="checkbox" class="form-check-input" />@Html.DisplayNameFor(model => model.Rememberme)
                </label>                
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    Click <a asp-action="Signup" asp-controller="Account">here</a> to signup
</div>

