@model IEnumerable<NRDCL.Models.Customer>

@{
    ViewData["Title"] = "Customer";
}

<h3>Customer Information</h3>

<p>
    <a asp-action="Create">Register Customer</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Citizenship ID
            </th>
            <th>
               Customer Name
            </th>
            <th>
                Telephone Number
            </th>
            <th>
                Email ID
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customers in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => customers.CitizenshipID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => customers.CustomerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => customers.TelephoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => customers.EmailId)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { CitizenshipID = customers.CitizenshipID }) |
                    @Html.ActionLink("Details", "Details", new { CitizenshipID = customers.CitizenshipID }) 
                    @*@Html.ActionLink("Delete", "Delete", new { CitizenshipID = customers.CitizenshipID })*@

                </td>
            </tr>
        }
    </tbody>
</table>


