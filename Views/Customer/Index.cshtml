@model IEnumerable<NRDCL.Models.Customer>

@{
    ViewData["Title"] = "Customer";
    <link rel="stylesheet" href="~/css/Index.css" />
}
<div class="page_title">
    <span class="title">Customer</span>
    <span class="subtitle">Customer List</span>
</div>
<div class="col-lg-12 text-right">
    <a asp-controller="Customer" asp-action="Create" class="btn btn-dark fa fa-plus">Register Customer</a>
</div>
@{
    if (TempData["Text"] != null)
    {
        <div class="alert alert-success">
            <strong>@TempData["Text"].ToString()</strong>
        </div>
    }
}
@if (Model.Count() > 0)
{
    <fieldset class="v-no-padding">
        <legend>Customer list</legend>
        <div class="form-group">
            <div class="col-md-12">
                <table class="table table-bordered table-striped editable-grid">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.CitizenshipID)</th>
                            <th>@Html.DisplayNameFor(model => model.CustomerName)</th>
                            <th>@Html.DisplayNameFor(model => model.TelephoneNumber)</th>
                            <th>@Html.DisplayNameFor(model => model.EmailId)</th>
                            <th width="20%">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var customers in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => customers.CitizenshipID)</td>
                                <td>@Html.DisplayFor(modelItem => customers.CustomerName)</td>
                                <td>@Html.DisplayFor(modelItem => customers.TelephoneNumber)</td>
                                <td>@Html.DisplayFor(modelItem => customers.EmailId)</td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { citizenshipID = customers.CitizenshipID }) |
                                    @Html.ActionLink("Details", "Details", new { citizenshipID = customers.CitizenshipID })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </fieldset>
}
else
{
    <h3>No Customer Exists!</h3>
}
