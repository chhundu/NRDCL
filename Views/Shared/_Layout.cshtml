<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"] - NRDCL</title>
    <link href="~/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/bootstrap/css/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/sbadmin/css/sb-admin-2.css" rel="stylesheet" />
    <link href="~/css/sweetalert.css" rel="stylesheet" />
    <link href="~/css/jquery.dataTables.css" rel="stylesheet" />
</head>
<body>
    <div id="wrapper">
        <nav id="navHeader" class="navbar navbar-default navbar-static-top" role="navigation">
            <div class="navbar-header">
                <div class="form-group">
                    <div class="col-md-2">
                        <img style="padding:0px 0px 0px 0px;" src="~/images/Logo.png" />
                    </div>
                    <div class="col-md-10">
                        <p style="margin-left: 25%" class="headerTxt">NRDCL Project</p>
                    </div>
                </div>
                <div class=""></div>
            </div>
            <div class="nav navbar-top-links navbar-right">
                <ul class="navbar-nav">
                    <partial name="_LoginInfo" />
                </ul>
            </div>
            <br>
            <br>
            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav nav-pills nav-stacked">
                        <li class="">
                            <a class="" asp-controller="Home" asp-action="Index" style="background-color: #004a80;color: #ffffff !important;"><i class="fa fa-home"></i>&nbsp;HOME</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li>
                                <a asp-controller="Administration" asp-action="CreateRole"><i class="glyphicon glyphicon-lock fa-fw"></i>&nbsp;&nbsp;Create Role</a>
                            </li>
                        }
                        <li>
                            <a asp-controller="Customer" asp-action="Create"><i class="glyphicon glyphicon-user"></i>&nbsp;&nbsp;Customer</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li>
                                <a asp-area="" asp-controller="Site" asp-action="Create"><i class="glyphicon glyphicon-briefcase"></i>&nbsp;&nbsp;Site</a>
                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li>
                                <a asp-area="" asp-controller="Product" asp-action="Create"><i class="glyphicon glyphicon-cog"></i>&nbsp;&nbsp;Product</a>
                            </li>
                        }
                        <li>
                            <a asp-area="" asp-controller="Deposit" asp-action="Create"><i class="glyphicon glyphicon-piggy-bank"></i>&nbsp;&nbsp;Deposit</a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Order" asp-action="Create"><i class="glyphicon glyphicon-cog"></i>&nbsp;&nbsp;Order</a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Report" asp-action="Index"><i class="glyphicon glyphicon-briefcase"></i>&nbsp;&nbsp;Report</a>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
        <div id="page-wrapper">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2021 - NRDCL - Thimphu Techpark Limited
            </div>
        </footer>

    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/sweetalert.min.js"></script>
    <script src="~/js/jquery.dataTables.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
