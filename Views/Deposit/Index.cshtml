@model IEnumerable<NRDCL.Models.Deposit>

@{
    ViewData["Title"] = "Deposit";
}
<h4>Deposit Information</h4>
<p>
    <a asp-action="Create">New Deposit</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Balance)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var deposit in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => deposit.CustomerID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => deposit.LastAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => deposit.Balance)
            </td>
            <td>
               @* @Html.ActionLink("Edit", "Edit", new { customerID = deposit.CustomerID}) |*@
                @Html.ActionLink("Details", "Details", new { customerID = deposit.CustomerID})
               @* @Html.ActionLink("Delete", "Delete", new { customerID = deposit.CustomerID})*@
            </td>
        </tr>
}
    </tbody>
</table>
