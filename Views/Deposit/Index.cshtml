@model IEnumerable<NRDCL.Models.Deposit>
@{
    ViewData["Title"] = "Deposit";
}
<div class="page_title">
    <span class="title">Deposit</span>
    <span class="subtitle">Deposit List</span>
</div>
<div class="col-lg-12 text-right">
    <a asp-controller="Deposit" asp-action="Create" class="btn btn-dark fa fa-plus">Deposit Advance</a>
</div>
@if (Model.Count() > 0)
{
    <fieldset class="v-no-padding">
        <legend>Customer list</legend>
        <div class="form-group">
            <div class="col-md-12">
                <table class="table table-bordered table-striped editable-grid">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.CustomerID)</th>
                            <th>@Html.DisplayNameFor(model => model.LastAmount)</th>
                            <th>@Html.DisplayNameFor(model => model.Balance)</th>
                            <th width="20%">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var deposit in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => deposit.CustomerID)</td>
                                <td>@Html.DisplayFor(modelItem => deposit.LastAmount)</td>
                                <td>@Html.DisplayFor(modelItem => deposit.Balance)</td>
                                <td>
                                   @* @Html.ActionLink("Edit", "Edit", new { customerID = deposit.CustomerID }) |*@
                                    @Html.ActionLink("Details", "Details", new { customerID = deposit.CustomerID })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </fieldset>
}
else
{
    <h3>No Data!</h3>
}
