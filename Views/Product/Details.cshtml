@model NRDCL.Models.Product

@{
    ViewData["Title"] = "Product";
}

<div>
    <h4>Product Details</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Product Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class = "col-sm-2">
            Price Per Unit
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PricePerUnit)
        </dd>
        <dt class = "col-sm-2">
            Transport Rate
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TransportRate)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { productId = Model.ProductId }) |
