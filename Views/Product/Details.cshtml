@model NRDCL.Models.Product
@{
    ViewData["Title"] = "Product";
}
<div class="page_title">
    <span class="title">Product</span>
    <span class="subtitle">Product Details</span>
</div>
<form class="form-horizontal globalForm">
    <fieldset>
        <legend>Product Details</legend>
        <div class="form-group">
            <div class="col-md-2">
                @Html.DisplayNameFor(model => model.ProductName)
            </div>
            <div class="col-md-3">
                @Html.DisplayFor(model => model.ProductName)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                @Html.DisplayNameFor(model => model.PricePerUnit)
            </div>
            <div class="col-md-3">
                @Html.DisplayFor(model => model.PricePerUnit)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                @Html.DisplayNameFor(model => model.TransportRate)
            </div>
            <div class="col-md-3">
                @Html.DisplayFor(model => model.TransportRate)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                <a asp-action="Edit" class="btn btn-info" asp-route-productId="@Model.ProductId">Edit</a>
            </div>
            <div class="col-md-2">
                <a asp-action="Create" class="btn btn-info" tabindex="8">Back to List</a>
            </div>
        </div>
    </fieldset>
</form>
