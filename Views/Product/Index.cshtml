@model IEnumerable<NRDCL.Models.Product>

@{
    ViewData["Title"] = "Product";
    <link rel="stylesheet" href="~/css/Index.css" />
}
<div class="row title">
    <div class="col-6">
        <h2>Product List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-controller="Product" asp-action="Create" class="btn btn-dark">Register Product</a>
    </div>
</div>
<hr />
<section class="container-fluid bg"></section>
<section class="row justify-content-center">
    <section class="col-10 col-sm-10 col-md-10 col-xl-10 formBg">
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped table-responsive-sm form-container">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.ProductName)</th>
                        <th>@Html.DisplayNameFor(model => model.PricePerUnit)</th>
                        <th>@Html.DisplayNameFor(model => model.TransportRate)</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var products in Model)
                    {
                        <tr>
                            <td width="20%">@Html.DisplayFor(modelItem => products.ProductName)</td>
                            <td width="20%">@Html.DisplayFor(modelItem => products.PricePerUnit)</td>
                            <td width="20%">@Html.DisplayFor(modelItem => products.TransportRate)</td>
                            <td width="20%">
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="Product" asp-route-productId="@products.ProductId" asp-action="Edit" class="btn btn-success mx-2">Edit</a>
                                    <a asp-controller="Product" asp-route-productId="@products.ProductId" asp-action="Details" class="btn btn-info mx-2">Details</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <h3>No Customer Exists!</h3>
        }
    </section>
</section>
