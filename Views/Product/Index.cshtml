@model IEnumerable<NRDCL.Models.Product>

@{
    ViewData["Title"] = "Product";
}
<div class="page_title">
    <span class="title">Product</span>
    <span class="subtitle">Product List</span>
</div>
<div class="col-lg-12 text-right">
    <a asp-controller="Product" asp-action="Create" class="btn btn-dark fa fa-plus">Add Product</a>
</div>
@if (Model.Count() > 0)
{
    <fieldset class="v-no-padding">
        <legend>Product list</legend>
        <div class="form-group">
            <div class="col-md-12">
                <table class="table table-bordered table-striped editable-grid">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.ProductName)</th>
                            <th>@Html.DisplayNameFor(model => model.PricePerUnit)</th>
                            <th>@Html.DisplayNameFor(model => model.TransportRate)</th>
                            <th width="20%">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var products in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => products.ProductName)</td>
                                <td>@Html.DisplayFor(modelItem => products.PricePerUnit)</td>
                                <td>@Html.DisplayFor(modelItem => products.TransportRate)</td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { productId = products.ProductId }) |
                                    @Html.ActionLink("Details", "Details", new { productId = products.ProductId })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </fieldset>
}
else
{
    <h3>No Product Exists!</h3>
}
