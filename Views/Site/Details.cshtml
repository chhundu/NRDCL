@model NRDCL.Models.Site

@{
    ViewData["Title"] = "Site";
    <link rel="stylesheet" href="~/css/Details.css" />
}
<h2 class="title">Site Details</h2>
<hr />
<section class="container-fluid bg"></section>
<section class="row justify-content-center">
    <section class="col-6 col-sm-6 col-md-6 col-xl-6 formBg">
        <form class="form-container">
            <div class="row">
                <div class="col-12">
                    <div class="form-group row">
                        <div class="col-4">
                            @Html.DisplayNameFor(model => model.CitizenshipID)
                        </div>
                        <div class="col-8">
                            @Html.DisplayFor(model => model.CitizenshipID)
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            @Html.DisplayNameFor(model => model.SiteName)
                        </div>
                        <div class="col-8">
                            @Html.DisplayFor(model => model.SiteName)
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            @Html.DisplayNameFor(model => model.DistanceFrom)
                        </div>
                        <div class="col-8">
                            @Html.DisplayFor(model => model.DistanceFrom)
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-8 row">
                            <div class="col">
                                <a asp-action="Edit" class="btn btn-info w-100" asp-route-siteId="@Model.SiteId">Edit</a>
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-success w-100">Back</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </section>
</section>

