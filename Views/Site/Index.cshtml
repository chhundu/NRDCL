@model IEnumerable<NRDCL.Models.Site>

@{
    ViewData["Title"] = "Site";
}
<div class="page_title">
    <span class="title">Site</span>
    <span class="subtitle">Site List</span>
</div>
<div class="col-lg-12 text-right">
    <a asp-controller="Site" asp-action="Create" class="btn btn-dark fa fa-plus">Register Site</a>
</div>
@if (Model.Count() > 0)
{
    <fieldset class="v-no-padding">
        <legend>Site List</legend>
        <div class="form-group">
            <div class="col-md-12">
                <table class="table table-bordered table-striped editable-grid">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.CitizenshipID)</th>
                            <th>@Html.DisplayNameFor(model => model.CustomerName)</th>
                            <th>@Html.DisplayNameFor(model => model.SiteName)</th>
                            <th>@Html.DisplayNameFor(model => model.DistanceFrom)</th>
                            <th width="20%">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var sites in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => sites.CitizenshipID)</td>
                                <td>@Html.DisplayFor(modelItem => sites.CustomerName)</td>
                                <td>@Html.DisplayFor(modelItem => sites.SiteName)</td>
                                <td>@Html.DisplayFor(modelItem => sites.DistanceFrom)</td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { siteId = sites.SiteId }) |
                                    @Html.ActionLink("Details", "Details", new { siteId = sites.SiteId })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                </div>
            </div>
        </fieldset>
 }
