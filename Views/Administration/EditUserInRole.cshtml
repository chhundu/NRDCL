@model List<NRDCL.Models.Acc.UserRole>

@{
    ViewData["Title"] = "EditUserInRole";
    var roleId = ViewBag.roleId;
}

<h2>Edit Users In Role</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditUserInRole"asp-route-roleId="@roleId" method="post">
            @for(int i = 0; i < Model.Count; i++)
            {
            <div class="form-check m-1">
                <input asp-for="@Model[i].UserId" hidden />
                <input asp-for="@Model[i].Username" hidden />
                <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                <label asp-for="@Model[i].IsSelected" class="form-check-label">
                    @Model[i].Username
                </label>
            </div>
            }
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-default" />
                <a asp-action="EditRole" asp-route-id="@roleId" class="btn btn-default">Cancel</a>
            </div>
        </form>
    </div>
</div>

