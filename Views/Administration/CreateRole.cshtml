@model NRDCL.Models.Acc.CreateRole
@{
    ViewData["Title"] = "CreateRole";
}
<div class="page_title">
    <span class="title">Manage Roles</span>
    <span class="subtitle">Create</span>
</div>
<form asp-action="CreateRole" class="form-horizontal globalForm">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <fieldset>
        <legend>Enter Role Information</legend>
        <div class="form-group">
            <div class="col-md-2">
                <label asp-for="RoleName" class="control-label"></label>
            </div>
            <div class="col-md-3">
                <input asp-for="RoleName" class="form-control" tabindex="1" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class=" col-md-2">
                <a asp-action="ListRoles" class="btn btn-primary btn-block" style="color:white">Back to List</a>
            </div>
            <div class=" col-md-2">
                <input type="submit" value="Create Role" class="btn btn-primary btn-block" />
            </div>
        </div>
    </fieldset>    
</form>


