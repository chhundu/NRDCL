@model NRDCL.Models.Acc.EditRoleModel

@{
    ViewData["Title"] = "DeleteRole";
}

<div class="page_title">
    <span class="title">Manage Roles</span>
    <span class="subtitle">Delete</span>
</div>
<br />
<form asp-action="RoleDeletion" asp-route-Id="@Model.Id" class="form-horizontal globalForm">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <fieldset>
        <legend>Are you sure you want to delete this?</legend>
        <div class="form-group">
            <div class="col-md-2">
                <label asp-for="Id" class="control-label"></label>
            </div>
            <div class="col-md-3">
                <input asp-for="Id" class="form-control" tabindex="1" disabled />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                <label asp-for="RoleName" class="control-label"></label>
            </div>
            <div class="col-md-3">
                <input asp-for="RoleName" class="form-control" tabindex="2"  disabled/>
            </div>
        </div>
        <div class="form-group">
            <div class=" col-md-2">
                <a asp-action="ListRoles" style="color:white" class="btn btn-primary btn-block">Cancel</a>
            </div>
            <div class=" col-md-2">
                <input type="submit" value="Delete" class="btn btn-primary btn-block" />
            </div>
        </div>
    </fieldset>
</form>

