@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "ListRoles";
}

<div class="page_title">
    <span class="title">Manage Roles</span>
    <span class="subtitle">Lists</span>
</div>
<br />
<div>
    <a asp-action="CreateRole" class="btn btn-primary btn-block" style="color:white;width:150px">Create New Role</a>
</div>
<br />
<fieldset class="v-no-padding">
    <legend>Registered Roles</legend>
    @if (Model.Any())
    {
        <div class="form-group">
            <div class="col-md-12">
                <table class="table table-striped table-bordered dt-responsive nowrap" id="roleTable">
                    <thead>
                        <tr>
                            <th>Role Type</th>
                            <th width="20%">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>                                
                                <td>
                                    @Html.ActionLink("Edit", "EditRole", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "DeleteRole", new { id = item.Id })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <h2>No roles to display.</h2>
    }
</fieldset>
