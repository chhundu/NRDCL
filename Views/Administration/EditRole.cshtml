@model NRDCL.Models.Acc.EditRoleModel

@{
    ViewData["Title"] = "EditRole";
}

<div class="page_title">
    <span class="title">Manage Roles</span>
    <span class="subtitle">Edit</span>
</div>
<form asp-action="EditRole" class="form-horizontal globalForm">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <fieldset>
        <legend>Enter Role Information</legend>
        <div class="form-group">
            <div class="col-md-2">
                <label asp-for="Id" class="control-label"></label>
            </div>
            <div class="col-md-3">
                <input asp-for="Id" class="form-control" tabindex="1" disabled />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                <label asp-for="RoleName" class="control-label"></label>
            </div>
            <div class="col-md-3">
                <input asp-for="RoleName" class="form-control" tabindex="1" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class=" col-md-2">
                <a asp-action="ListRoles" class="btn btn-primary btn-block" style="color:white">Back to List</a>
            </div>
            <div class=" col-md-2">
                <input type="submit" value="Update" class="btn btn-primary btn-block" />
            </div>
        </div>
    </fieldset>
    <br />
    <fieldset class="v-no-padding">
        <legend>Users in this role</legend>
        @if (Model.Users.Any())
        {
            <div class="form-group">
                <div class="col-md-12">
                    <table style="width:50%" class="table table-striped table-bordered dt-responsive nowrap" id="userinroleTable">
                        <thead>
                            <tr>
                                <th>Users</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.Users)
                            {
                                <tr>
                                    <td>
                                        @user
                                    </td>
                                </tr>
                            }
                            <tr>
                                <td><a class="btn btn-primary" style="color:white" asp-action="EditUserInRole" asp-route-roleId="@Model.Id">Add or remove Users</a></td>
                            </tr>
                        </tbody>
                        

                    </table>
                </div>
            </div>
        }
        else
        {
            <h3>None at the moment.</h3>
            <h4>Click <a style="color:white" class="btn btn-primary" asp-action="EditUserInRole" asp-route-roleId="@Model.Id">here</a> to Add Users in this role.</h4>
        }
    </fieldset>
</form>

